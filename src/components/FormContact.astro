

---
import '@fortawesome/fontawesome-free/css/all.min.css';
---

<div class="form-title-container">
  <!-- <hr class="top-line"> -->
  <h2 class="form-title">Evaluacion y Orientacion Gratis!</h2>
  <h3 class="form-subtitle">Dejanos tus datos y te contactaremos</h3>
</div>

<!-- form -->
<div class="form-container">
<form class="formulario" action="/api/sendForm" method="post">
    <!-- name -->
    <div class="input-container">
      <i class="fas fa-user"></i>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Ingresa tu nombre"
        required
      />
    </div>

    <!-- email -->
    <div class="input-container">
      <i class="fas fa-envelope"></i>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Ingresa tu email"
      />
    </div>

    <!-- Telefono -->
    <div class="input-container">
      <i class="fas fa-phone-alt"></i>
      <input
        type="tel"
        name="Telefono"
        id=""
        placeholder="Ingresa tu telefono"
      />
    </div>
    <!-- message -->
    <div class="textarea-container">
      <i class="fas fa-edit"></i>
      <textarea id="message" name="message" placeholder="Como podemos ayudarte?"
      ></textarea>
    </div>
    <!-- button -->
    <button type="submit" class="form-button">Enviar</button>
  </form>
</div>


<section class="whatsapp-container">
  <hr class="bottom-line" />
  <h3 class="form-subtitle">Puedes contactarnos por whatsapp</h3>
  <a
    href="https://wa.me/56932496264?text=Hola%2C%20me%20gustar%C3%ADa%20saber%20m%C3%A1s%20informaci%C3%B3n"
    class="button-whatsapp"
    target="_blank"><img src="/images/whatsapp.png" alt="" /></a
  >
</section>

<style>

/* Aplicar box-sizing para todos los elementos */
*, *::before, *::after {
  box-sizing: border-box;
}

.form-title-container {
  text-align: center;
  margin-bottom: 2rem;
  margin-top: 4rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-title {
  font-size: 1.4rem;
}

.form-title,
.form-subtitle {
  margin: 0;
  font-family: "Montserrat", sans-serif;
}

.form-container {
  display: flex;
  justify-content: center;
  padding: 0 10px;
  /*width: 100%; /* Asegurarse de que el contenedor ocupe el 100% del ancho */
  background-color: red;
}

.formulario {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2px solid #000000;
  border-radius: 18px;
  width: 400px; /* En tamaños grandes */
  /*max-width: 100%; Permitir que se ensanche en pantallas pequeñas */
  height: auto;
  padding: 2.5rem 1.5rem;
  background-color: rgb(255, 255, 255);
}

.form-container  {
 
}

.input-container i {
  margin-right: 3px;
}

.textarea-container {
  display: flex;
  align-items: first baseline;
}

.textarea-container i {
  margin-right: 3px;
}

.form-container input,
textarea {
  width: 300px;
  margin-bottom: 1rem;
  padding: 0.5rem;
  border: 2px solid #ffffff;
  font-family: "Montserrat", sans-serif;
  border-radius: 15px;
  background: rgb(247, 247, 247);
}

input::placeholder {
  font-size: 16px; /* Tamaño de fuente */
  font-family: "Montserrat", sans-serif; /* Familia de fuente */
}

input:focus,
textarea:focus {
  outline: none;
  border: 2px solid #08e7ef2b !important;
  border-radius: 15px;
}

.form-button {
  background-color: #b2e0c4;
  width: 90%;
  border-radius: 15px;
  padding: 0.75rem;
  color: #000000;
  font-family: "Montserrat", sans-serif;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s ease-in;
}

.form-button:hover {
  background-color: #a0d0b0;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

.button-whatsapp {
  cursor: pointer;
}

.whatsapp-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 3rem;
  flex-direction: column;
}

.whatsapp-container h3 {
  font-family: "Montserrat", sans-serif;
  font-size: 1.2rem;
}

.whatsapp-container img {
  width: 60px;
  height: 60px;
  margin-top: 1rem;
  transition: 0.4s ease;
}

.whatsapp-container img:hover {
  transform: scale(1.1);
}

.top-line,
.bottom-line {
  width: 25%;
  border: none;
  border-top: 2px solid #f48fb16f;
  margin: 1.5rem auto;
}

.bottom-line {
  border-top: 2px solid #f48fb1;
  margin-bottom: 3rem;
}



/* Estilos para pantallas grandes (por ejemplo, laptops y desktops) */
@media (min-width: 992px) {
  
}
 
/* Estilos para pantallas medianas (por ejemplo, tablets) */
@media (min-width: 768px) and (max-width: 991px) {
  .form-container{
    width: 100%;

  }
  .formulario {
    width: 800px;
    height: 500px;
  }s
}
 
/* Estilos para pantallas pequeñas (por ejemplo, móviles) */
@media (max-width: 767px) {
  .form-container{
    width: 900px;
  }


  
}

</style>

