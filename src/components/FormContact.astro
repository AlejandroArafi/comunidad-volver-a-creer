.form-button:hover {
  background-color: #7cb342;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* HR */
hr {
  border: none;
  border-top: 2px solid #eee;
  margin: 2rem 0;
}

/* RESPONSIVE */
@media (max-width: 768px) {
  .formulario {
    padding: 1.5rem;
  }

  .form-title-container h3 {
    font-size: 1.2rem;
  }
}
</style>