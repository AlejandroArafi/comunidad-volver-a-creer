*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Montserrat', sans-serif;
  color: #333;
  background-color: #f9f9f9;
}

.form-title-container h3 {
  color: #444;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

/* CONTENEDORES PRINCIPALES */
.form-title-container {
  text-align: center;
  margin: 4rem auto 2rem;
}

.form-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.form-container .formulario {
  width: 100%;
  max-width: 500px;
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); 
  padding: 2rem;
}

/* INPUTS */
.input-container {
  display: flex;
  align-items: center;
  margin-bottom: 1.5rem;
  position: relative;
}

.input-container i {
  position: absolute;
  left: 12px;
  color: #888;
}

input,
textarea {
  width: 100%;
  padding: 12px 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #f9f9f9;
  font-size: 1rem;
  color: #333;
  transition: border-color 0.3s;
}

input:focus,
textarea:focus {
  border-color: #8bc34a;
  outline: none;
}

textarea {
